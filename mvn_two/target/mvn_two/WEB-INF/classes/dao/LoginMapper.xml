<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.LoginMapper">
    <!--public List<User> getUserByNameAndPassword(@Param("name") String name, @Param("password") String password);-->
    <select id="getUserByNameAndPassword" resultType="model.User">
        select *from tbl_user where name = #{name} and password = #{password};
    </select>
</mapper>